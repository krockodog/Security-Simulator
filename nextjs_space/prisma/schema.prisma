datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model PBQSession {
  id          String   @id @default(cuid())
  sessionId   String   @unique @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  attempts    PBQAttempt[]
}

model PBQAttempt {
  id            String      @id @default(cuid())
  sessionId     String
  session       PBQSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  pbqNumber     Int         // 1 or 2
  pbqType       String      // "firewall" or "incident_response"
  userAnswer    String      // JSON string of user's answer
  score         Int         // 0-100
  isCorrect     Boolean
  timeSpent     Int?        // seconds
  createdAt     DateTime    @default(now())
  
  @@index([sessionId])
  @@index([pbqType])
}
